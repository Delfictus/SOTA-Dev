# PRISM4D Binding Site Visualization
# Generated by prism-nhs
# Industry-standard pocket visualization

# Setup
bg_color white
set cartoon_fancy_helices, 1
set cartoon_side_chain_helper, 1
set surface_quality, 1

# Load your structure (adjust path as needed)
# load 1btl.topology.pdb, protein
# show cartoon, protein
# color gray80, protein

# ========== Site 1 (ActiveSite) [DRUGGABLE] ==========
select pocket_1_lining, (chain A and resi 220) or (chain A and resi 208) or (chain A and resi 45) or (chain A and resi 219) or (chain A and resi 209) or (chain A and resi 221) or (chain A and resi 207) or (chain A and resi 236) or (chain A and resi 48) or (chain A and resi 234) or (chain A and resi 164) or (chain A and resi 185) or (chain A and resi 218) or (chain A and resi 160) or (chain A and resi 235) or (chain A and resi 210) or (chain A and resi 233) or (chain A and resi 46) or (chain A and resi 191) or (chain A and resi 42) or (chain A and resi 44) or (chain A and resi 188) or (chain A and resi 194) or (chain A and resi 195) or (chain A and resi 206) or (chain A and resi 47) or (chain A and resi 49) or (chain A and resi 222) or (chain A and resi 101) or (chain A and resi 43) or (chain A and resi 155) or (chain A and resi 232)
show sticks, pocket_1_lining
set stick_radius, 0.15, pocket_1_lining
select pocket_1_catalytic, (chain A and resi 45) or (chain A and resi 164) or (chain A and resi 185) or (chain A and resi 160) or (chain A and resi 46) or (chain A and resi 191) or (chain A and resi 42) or (chain A and resi 44) or (chain A and resi 188) or (chain A and resi 194) or (chain A and resi 195) or (chain A and resi 47) or (chain A and resi 101) or (chain A and resi 43) or (chain A and resi 155)
color magenta, pocket_1_catalytic
select pocket_1_hydrophobic, (chain A and resi 236) or (chain A and resi 234) or (chain A and resi 235) or (chain A and resi 233) or (chain A and resi 232)
color tv_yellow, pocket_1_hydrophobic
create pocket_1_surface, pocket_1_lining
show surface, pocket_1_surface
set surface_color, slate, pocket_1_surface
set transparency, 0.7, pocket_1_surface
pseudoatom pocket_1_center, pos=[4.759, 3.346, 30.377]
show spheres, pocket_1_center
set sphere_scale, 0.5, pocket_1_center
color red, pocket_1_center
group pocket_1, pocket_1_lining pocket_1_surface pocket_1_center pocket_1_catalytic pocket_1_hydrophobic

group all_pockets, pocket_1

# ========== Color Legend ==========
# Magenta = Catalytic residues (GLU, ASP, HIS, SER, CYS, LYS)
# Green = Aromatic residues (PHE, TYR, TRP) - pi-stacking
# Yellow = Hydrophobic residues (ALA, VAL, LEU, ILE, MET, PRO)
# Slate surface = Pocket cavity
# Red sphere = Druggable site centroid
# Gray sphere = Non-druggable site centroid

# ========== Usage Tips ==========
# To view specific pocket: disable all_pockets, enable pocket_N
# To zoom on pocket: zoom pocket_N_lining
# To show H-bonds: select donors, pocket_N_lining; distance hbonds, donors, acceptors, 3.5
# To label residues: label pocket_N_lining and name CA, "%s%s" % (resn, resi)
