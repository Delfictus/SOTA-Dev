# PRISM4D Binding Site Visualization
# Generated by prism-nhs
# Industry-standard pocket visualization

# Setup
bg_color white
set cartoon_fancy_helices, 1
set cartoon_side_chain_helper, 1
set surface_quality, 1

# Load your structure (adjust path as needed)
# load 1hhp.topology.pdb, protein
# show cartoon, protein
# color gray80, protein

# ========== Site 1 (ActiveSite) ==========
select pocket_1_lining, (chain A and resi 3) or (chain A and resi 4) or (chain A and resi 98) or (chain A and resi 5) or (chain A and resi 2) or (chain A and resi 1) or (chain A and resi 97) or (chain A and resi 6)
show sticks, pocket_1_lining
set stick_radius, 0.15, pocket_1_lining
select pocket_1_aromatic, (chain A and resi 98) or (chain A and resi 97)
color forest, pocket_1_aromatic
select pocket_1_hydrophobic, (chain A and resi 3) or (chain A and resi 4) or (chain A and resi 5) or (chain A and resi 2) or (chain A and resi 1) or (chain A and resi 6)
color tv_yellow, pocket_1_hydrophobic
create pocket_1_surface, pocket_1_lining
show surface, pocket_1_surface
set surface_color, slate, pocket_1_surface
set transparency, 0.7, pocket_1_surface
pseudoatom pocket_1_center, pos=[47.544, 54.821, 1.867]
show spheres, pocket_1_center
set sphere_scale, 0.5, pocket_1_center
color gray50, pocket_1_center
group pocket_1, pocket_1_lining pocket_1_surface pocket_1_center pocket_1_aromatic pocket_1_hydrophobic

