# PRISM4D Binding Site Visualization
# Generated by prism-nhs
# Industry-standard pocket visualization

# Setup
bg_color white
set cartoon_fancy_helices, 1
set cartoon_side_chain_helper, 1
set surface_quality, 1

# Load your structure (adjust path as needed)
# load 1g1f.topology.pdb, protein
# show cartoon, protein
# color gray80, protein

# ========== Site 1 (ActiveSite) [DRUGGABLE] ==========
select pocket_1_lining, (chain A and resi 108) or (chain A and resi 211) or (chain A and resi 220) or (chain A and resi 223) or (chain A and resi 106) or (chain A and resi 219) or (chain A and resi 213) or (chain A and resi 212) or (chain A and resi 224) or (chain A and resi 81) or (chain A and resi 221) or (chain A and resi 177) or (chain A and resi 192) or (chain A and resi 107) or (chain A and resi 216) or (chain A and resi 210) or (chain A and resi 189) or (chain A and resi 222) or (chain A and resi 218) or (chain A and resi 174) or (chain A and resi 109) or (chain A and resi 82) or (chain A and resi 209) or (chain A and resi 80) or (chain A and resi 217) or (chain A and resi 79) or (chain A and resi 196) or (chain A and resi 225) or (chain A and resi 214)
show sticks, pocket_1_lining
set stick_radius, 0.15, pocket_1_lining
select pocket_1_catalytic, (chain A and resi 108) or (chain A and resi 211) or (chain A and resi 106) or (chain A and resi 219) or (chain A and resi 213) or (chain A and resi 212) or (chain A and resi 81) or (chain A and resi 177) or (chain A and resi 192) or (chain A and resi 107) or (chain A and resi 216) or (chain A and resi 210) or (chain A and resi 189) or (chain A and resi 218) or (chain A and resi 174) or (chain A and resi 109) or (chain A and resi 82) or (chain A and resi 209) or (chain A and resi 80) or (chain A and resi 217) or (chain A and resi 79) or (chain A and resi 196) or (chain A and resi 214)
color magenta, pocket_1_catalytic
select pocket_1_aromatic, (chain A and resi 220) or (chain A and resi 223) or (chain A and resi 224) or (chain A and resi 221) or (chain A and resi 222) or (chain A and resi 225)
color forest, pocket_1_aromatic
create pocket_1_surface, pocket_1_lining
show surface, pocket_1_surface
set surface_color, slate, pocket_1_surface
set transparency, 0.7, pocket_1_surface
pseudoatom pocket_1_center, pos=[10.130, 0.829, 2.841]
show spheres, pocket_1_center
set sphere_scale, 0.5, pocket_1_center
color red, pocket_1_center
group pocket_1, pocket_1_lining pocket_1_surface pocket_1_center pocket_1_catalytic pocket_1_aromatic

group all_pockets, pocket_1

# ========== Color Legend ==========
# Magenta = Catalytic residues (GLU, ASP, HIS, SER, CYS, LYS)
# Green = Aromatic residues (PHE, TYR, TRP) - pi-stacking
# Yellow = Hydrophobic residues (ALA, VAL, LEU, ILE, MET, PRO)
# Slate surface = Pocket cavity
# Red sphere = Druggable site centroid
# Gray sphere = Non-druggable site centroid

# ========== Usage Tips ==========
# To view specific pocket: disable all_pockets, enable pocket_N
# To zoom on pocket: zoom pocket_N_lining
# To show H-bonds: select donors, pocket_N_lining; distance hbonds, donors, acceptors, 3.5
# To label residues: label pocket_N_lining and name CA, "%s%s" % (resn, resi)
