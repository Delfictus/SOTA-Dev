# PRISM4D Binding Site Visualization
# Generated by prism-nhs
# Industry-standard pocket visualization

# Setup
bg_color white
set cartoon_fancy_helices, 1
set cartoon_side_chain_helper, 1
set surface_quality, 1

# Load your structure (adjust path as needed)
# load 1bk2.topology.pdb, protein
# show cartoon, protein
# color gray80, protein

# ========== Site 1 (Unknown) [DRUGGABLE] ==========
select pocket_1_lining, (chain A and resi 50) or (chain A and resi 51) or (chain A and resi 53) or (chain A and resi 52) or (chain A and resi 49) or (chain A and resi 37) or (chain A and resi 54) or (chain A and resi 35) or (chain A and resi 34) or (chain A and resi 7) or (chain A and resi 55) or (chain A and resi 48) or (chain A and resi 4) or (chain A and resi 20) or (chain A and resi 8) or (chain A and resi 36) or (chain A and resi 5) or (chain A and resi 6)
show sticks, pocket_1_lining
set stick_radius, 0.15, pocket_1_lining
select pocket_1_catalytic, (chain A and resi 54) or (chain A and resi 35) or (chain A and resi 34) or (chain A and resi 55)
color magenta, pocket_1_catalytic
select pocket_1_aromatic, (chain A and resi 52) or (chain A and resi 37) or (chain A and resi 8) or (chain A and resi 36)
color forest, pocket_1_aromatic
select pocket_1_hydrophobic, (chain A and resi 50) or (chain A and resi 51) or (chain A and resi 53) or (chain A and resi 49) or (chain A and resi 7) or (chain A and resi 48) or (chain A and resi 4) or (chain A and resi 20) or (chain A and resi 5) or (chain A and resi 6)
color tv_yellow, pocket_1_hydrophobic
create pocket_1_surface, pocket_1_lining
show surface, pocket_1_surface
set surface_color, slate, pocket_1_surface
set transparency, 0.7, pocket_1_surface
pseudoatom pocket_1_center, pos=[37.493, 14.891, 7.840]
show spheres, pocket_1_center
set sphere_scale, 0.5, pocket_1_center
color red, pocket_1_center
group pocket_1, pocket_1_lining pocket_1_surface pocket_1_center pocket_1_catalytic pocket_1_aromatic pocket_1_hydrophobic

# ========== Site 2 (Unknown) [DRUGGABLE] ==========
select pocket_2_lining, (chain A and resi 8) or (chain A and resi 9) or (chain A and resi 52) or (chain A and resi 10) or (chain A and resi 49) or (chain A and resi 13) or (chain A and resi 22) or (chain A and resi 20) or (chain A and resi 11) or (chain A and resi 7) or (chain A and resi 21) or (chain A and resi 51) or (chain A and resi 6)
show sticks, pocket_2_lining
set stick_radius, 0.15, pocket_2_lining
select pocket_2_catalytic, (chain A and resi 9) or (chain A and resi 13) or (chain A and resi 22) or (chain A and resi 21)
color magenta, pocket_2_catalytic
select pocket_2_aromatic, (chain A and resi 8) or (chain A and resi 52) or (chain A and resi 10)
color forest, pocket_2_aromatic
select pocket_2_hydrophobic, (chain A and resi 49) or (chain A and resi 20) or (chain A and resi 7) or (chain A and resi 51) or (chain A and resi 6)
color tv_yellow, pocket_2_hydrophobic
create pocket_2_surface, pocket_2_lining
show surface, pocket_2_surface
set surface_color, slate, pocket_2_surface
set transparency, 0.7, pocket_2_surface
pseudoatom pocket_2_center, pos=[35.938, 15.759, 1.347]
show spheres, pocket_2_center
set sphere_scale, 0.5, pocket_2_center
color red, pocket_2_center
group pocket_2, pocket_2_lining pocket_2_surface pocket_2_center pocket_2_catalytic pocket_2_aromatic pocket_2_hydrophobic

group all_pockets, pocket_1 pocket_2

# ========== Color Legend ==========
# Magenta = Catalytic residues (GLU, ASP, HIS, SER, CYS, LYS)
# Green = Aromatic residues (PHE, TYR, TRP) - pi-stacking
# Yellow = Hydrophobic residues (ALA, VAL, LEU, ILE, MET, PRO)
# Slate surface = Pocket cavity
# Red sphere = Druggable site centroid
# Gray sphere = Non-druggable site centroid

# ========== Usage Tips ==========
# To view specific pocket: disable all_pockets, enable pocket_N
# To zoom on pocket: zoom pocket_N_lining
# To show H-bonds: select donors, pocket_N_lining; distance hbonds, donors, acceptors, 3.5
# To label residues: label pocket_N_lining and name CA, "%s%s" % (resn, resi)
